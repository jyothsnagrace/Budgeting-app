# Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# Supabase Configuration
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# ============================================
# LLM Configuration
# ============================================
# Choose: "ollama", "groq", or "openai"
LLM_PROVIDER=ollama

# Ollama (local - completely free)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_EXTRACTION=llama3.2
OLLAMA_MODEL_VALIDATION=llama3.2

# Groq (cloud - fast, generous free tier)
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.1-8b-instant

# OpenAI (cloud - pay per use)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ============================================
# Voice Input (Whisper)
# ============================================
# Options: tiny, base, small, medium, large
WHISPER_MODEL=base

# ============================================
# Cost of Living API
# ============================================
# Provider: "teleport" (free) or "numbeo" (requires key)
COST_API_PROVIDER=teleport
NUMBEO_API_KEY=your-numbeo-key-here

# ============================================
# Authentication
# ============================================
SESSION_SECRET_KEY=change-this-to-a-random-secret-key-in-production

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
